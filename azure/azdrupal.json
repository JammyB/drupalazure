{
    "location": "canadacentral",
    "name": "azdrupal",
    "properties": {
      "containers": [
        {
          "name": "azdrupal-web",
          "properties": {
            "environmentVariables": [],
            "image": "dsutter/azdrupal-web:latest",
            "ports": [
              {
                "port": 80,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "requests": {
                "cpu": 1.0,
                "memoryInGB": 1.5
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/app/html/sites/default/files",
                "name": "myfiles"
              }
            ]
          }
        },
        {
          "name": "azdrupal-php",
          "properties": {
            "environmentVariables": [
              {
                "name": "DB_NAME",
                "value": ""
              },
              {
                "name": "DB_USER",
                "value": ""
              },
              {
                "name": "DB_PASSWORD",
                "value": ""
              },
              {
                "name": "DB_HOST",
                "value": ""
              },
              {
                "name": "DB_PORT",
                "value": "3306"
              },
              {
                "name": "DB_DRIVER",
                "value": "mysql"
              }
            ],
            "image": "dsutter/azdrupal-php:latest",
            "ports": [],
            "resources": {
              "requests": {
                "cpu": 1.0,
                "memoryInGB": 1.5
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/app/html/sites/default/files",
                "name": "myfiles"
              }
            ]
          }
        }
      ],
      "initContainers": [],
      "ipAddress": {
        "autoGeneratedDomainNameLabelScope": "Unsecure",
        "dnsNameLabel": "azdrupal",
        "fqdn": "azdrupal.canadacentral.azurecontainer.io",
        "ports": [
          {
            "port": 80,
            "protocol": "TCP"
          }
        ],
        "type": "Public"
      },
      "osType": "Linux",
      "restartPolicy": "OnFailure",
      "sku": "Standard",
      "volumes": [
        {
          "azureFile": {
            "shareName": "azdrupal-files",
            "storageAccountName": "mydrupalstorage",
            "storageAccountKey": "xxxxx=="
          },
          "name": "myfiles"
        }
      ]
    },
    "tags": {},
    "type": "Microsoft.ContainerInstance/containerGroups"
}
